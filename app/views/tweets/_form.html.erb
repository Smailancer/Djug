<%= simple_form_for(@tweet) do |f| %>

    <div class="card">
    <div class="card-header">غرد الآن </div>
    <div class="card-body">
        <%= f.error_notification %>
        <%= f.input :content, required: true, autofocus: true, label: false, hint: "#{140 - @tweet.content.to_s.length}", input_html: { class: 'form-control', maxlength: 140} %>
        <%= f.button :submit, 'غرد', class: "btn btn-primary btn-block" %>
    </div>
    </div>
    <%end %>
    <br>