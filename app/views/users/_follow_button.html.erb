
<% if user_signed_in? && current_user.id != user.id %>
  <% if current_user.following? user %>
    <%= form_for current_user.active_relationships.find_by_followed_id(user.id), html: { method: :delete } do |f| %>
      <%= f.submit 'إلغاء المتابعة', class: 'btn btn-secondary' %>
    <% end %>
  <% else %>
    <%= form_for current_user.active_relationships.build do |f| %>
      <%= hidden_field_tag :followed_id, user.id %>
      <%= f.submit 'متابعة', class: 'btn btn-dark' %>
    <% end %>
  <% end %>
<% end %>